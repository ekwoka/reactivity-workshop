{
  "name": "reactivity-workshop",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "author": {
    "name": "Eric Kwoka",
    "email": "eric@thekwoka.net",
    "url": "https://thekwoka.net/"
  },
  "license": "MIT",
  "scripts": {
    "build": "pnpm run -r build",
    "doctor": "run-s lint test:run build size",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --fix ./**/src/*",
    "lint:prettier": "prettier --write ./**/src/*",
    "lint:staged": "lint-staged",
    "precommit": "run-s lint:staged build size",
    "prepare": "husky install",
    "sandbox": "vite sandbox --open",
    "slides": "pnpm -C workshop run dev",
    "size": "node scripts/getSize.js",
    "test": "vitest",
    "test:run": "vitest --run"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "4.2.0",
    "@types/node": "20.5.8",
    "@typescript-eslint/eslint-plugin": "6.5.0",
    "@typescript-eslint/parser": "6.5.0",
    "@vitest/ui": "0.34.3",
    "autoprefixer": "10.4.15",
    "esbuild": "0.19.2",
    "eslint": "8.48.0",
    "happy-dom": "10.11.2",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.29",
    "postcss-load-config": "4.0.1",
    "prettier": "3.0.3",
    "prettier-plugin-svelte": "3.0.3",
    "prettier-plugin-tailwindcss": "0.5.4",
    "pretty-bytes": "6.1.1",
    "tailwindcss": "3.3.3",
    "typescript": "5.2.2",
    "vite": "4.4.9",
    "vite-plugin-dts": "3.5.3",
    "vite-tsconfig-paths": "4.2.0",
    "vitest": "0.34.3",
    "vitest-dom": "0.1.0"
  },
  "lint-staged": {
    "*.{js,ts,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSameLine": true,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports",
      "prettier-plugin-svelte",
      "prettier-plugin-tailwindcss"
    ],
    "importOrder": [],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "overrides": [
      {
        "files": "*.svelte",
        "options": {
          "parser": "svelte"
        }
      }
    ]
  },
  "pnpm": {
    "overrides": {
      "@babel/types@<7.22.5": "7.22.5",
      "@esbuild/android-arm@<0.19.2": "0.19.2",
      "@esbuild/android-arm64@<0.19.2": "0.19.2",
      "@esbuild/android-x64@<0.19.2": "0.19.2",
      "@esbuild/darwin-arm64@<0.19.2": "0.19.2",
      "@esbuild/darwin-x64@<0.19.2": "0.19.2",
      "@esbuild/freebsd-arm64@<0.19.2": "0.19.2",
      "@esbuild/freebsd-x64@<0.19.2": "0.19.2",
      "@esbuild/linux-arm@<0.19.2": "0.19.2",
      "@esbuild/linux-arm64@<0.19.2": "0.19.2",
      "@esbuild/linux-ia32@<0.19.2": "0.19.2",
      "@esbuild/linux-loong64@<0.19.2": "0.19.2",
      "@esbuild/linux-mips64el@<0.19.2": "0.19.2",
      "@esbuild/linux-ppc64@<0.19.2": "0.19.2",
      "@esbuild/linux-riscv64@<0.19.2": "0.19.2",
      "@esbuild/linux-s390x@<0.19.2": "0.19.2",
      "@esbuild/linux-x64@<0.19.2": "0.19.2",
      "@esbuild/netbsd-x64@<0.19.2": "0.19.2",
      "@esbuild/openbsd-x64@<0.19.2": "0.19.2",
      "@esbuild/sunos-x64@<0.19.2": "0.19.2",
      "@esbuild/win32-arm64@<0.19.2": "0.19.2",
      "@esbuild/win32-ia32@<0.19.2": "0.19.2",
      "@esbuild/win32-x64@<0.19.2": "0.19.2",
      "acorn@<8.10.0": "8.10.0",
      "ansi-regex@<6.0.1": "6.0.1",
      "argparse@<2.0.1": "2.0.1",
      "brace-expansion@<2.0.1": "2.0.1",
      "chalk@<5.3.0": "5.3.0",
      "color-convert@<2.0.1": "2.0.1",
      "color-name@<1.1.4": "1.1.4",
      "commander@<11.0.0": "11.0.0",
      "cross-spawn@<7.0.3": "7.0.3",
      "esbuild@<0.19.2": "0.19.2",
      "escape-string-regexp@<4.0.0": "4.0.0",
      "glob-parent@<6.0.2": "6.0.2",
      "glob@<7.2.3": "7.2.3",
      "globals@<13.20.0": "13.20.0",
      "has-flag@<4.0.0": "4.0.0",
      "mimic-fn@<4.0.0": "4.0.0",
      "minimatch@<9.0.2": "9.0.2",
      "onetime@<6.0.0": "6.0.0",
      "p-limit@<4.0.0": "4.0.0",
      "path-key@<4.0.0": "4.0.0",
      "path-type@<4.0.0": "4.0.0",
      "pidtree@<0.6.0": "0.6.0",
      "pify@<3.0.0": "3.0.0",
      "resolve@<1.22.2": "1.22.2",
      "semver@<7.5.4": "7.5.4",
      "shebang-command@<2.0.0": "2.0.0",
      "shebang-regex@<3.0.0": "3.0.0",
      "source-map@<0.6.1": "0.6.1",
      "strip-ansi@<7.1.0": "7.1.0",
      "supports-color@<7.2.0": "7.2.0",
      "type-fest@<1.4.0": "1.4.0",
      "typescript@<5.2.2": "5.2.2",
      "which@<2.0.2": "2.0.2",
      "yocto-queue@<1.0.0": "1.0.0"
    }
  }
}
